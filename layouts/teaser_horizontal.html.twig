{#
/**
 * @file
 * Template for a teaser large location layout.
 */
#}
{%
  set classes = [
  'teaser',
  'teaser--horizontal',
]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>

    <div class="teaser__row">
      {% if content.image %}
        <div class="teaser__image js-img-to-bg">
          {{ content.image }}
        </div>
      {% endif %}
      <div class="teaser__content">
        <div class="teaser__title">
          {{ content.title }}
        </div>
        <div class="teaser__main">
          {{ content.main }}
        </div>
        {% if content.tag %}
          <div class="teaser__tag">
            {{ content.tag}}
          </div>
        {% endif %}
      </div>
    </div>

  </div>
{% endif %}

