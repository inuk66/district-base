{#
/**
 * @file
 * Template for a teaser large location layout.
 */
#}
{%
  set classes = [
  'teaser',
  'teaser--mini',
]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>

    <div class="teaser__row">
      {% if content.image %}
        <div class="teaser__image js-img-to-bg">
          {{ content.image }}
        </div>
      {% endif %}
      <div class="teaser__content">
        {{ content.main }}
      </div>
    </div>

  </div>
{% endif %}

